<li class="quote">
  <blockquote class="quotes">
    <%= (quote.text || "").html_safe %>
  </blockquote>
  <div class="quotes-bg">
    <div class="quotes-author">
      <%= quote.author %>
      <% unless quote.position.blank? %>
        <span>
          <%= quote.position %>
        </span>
      <% end %>
    </div>
  </div>
</li>